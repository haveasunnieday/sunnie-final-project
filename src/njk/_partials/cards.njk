<div class="container">
  <div class="row">
  {% for member in data.members %}
    {% if member.slug == "freddie-mercury"%}
      <div class="col col-12 col-sm-12 col-md-6 col-lg-3">
    {% else%}
      <div class="col col-12 col-sm-4 col-md-6 col-lg-3">
    {% endif%}
        <div class="card mb-4">
          <img class="card-img-top img-fluid" src="./img/members/{{member.imagebw}}" alt="{{member.name}}">
          <div class="card-body text-center">
            <a href="{{member.slug}}.html" class="card-link">{{member.name}}</a>
          </div>
        </div>
      </div>
  {% endfor %}
  </div>
</div>